{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": ".",
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "./src/*": ["./src/*"],
        },
        "allowSyntheticDefaultImports": true,
        "removeComments": true
    },
    "include": ["src/**/*"]
}