{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"rootDir": ".",
		"allowJs": true,
		"checkJs": true,
		"outDir": "./lib",
		"declaration": true,
		"skipLibCheck": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"]
}
